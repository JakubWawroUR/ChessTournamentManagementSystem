<AnchorPane fx:id="mainBox" prefHeight="50.0" prefWidth="1280.0" style="-fx-background-color: #333;" stylesheets="@../assets/styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.Player.PlayerTopBar">
