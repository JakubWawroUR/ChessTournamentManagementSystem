                <Label fx:id="sceneTitleLabel" text="Nazwa Sceny" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
