<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainBox" stylesheets="@../assets/styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.Admin.AdminResolveGame">
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label fx:id="formText" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Mecz: [Gracz1] vs [Gracz2]" />
            <Label fx:id="formText" text="Rozstrzygnij spotkanie" />

            <Button fx:id="player1WinButton" onAction="#handlePlayer1Win" prefWidth="200" text="Gracz1 wygrywa" />
            <Button fx:id="player2WinButton" onAction="#handlePlayer2Win" prefWidth="200" text="Gracz2 wygrywa" />
            <Button fx:id="drawButton" onAction="#handleDraw" prefWidth="200" text="Remis" />
            <Button onAction="#handleCancel" prefWidth="200" text="Anuluj" />
        </VBox>
    </children>
</AnchorPane>
