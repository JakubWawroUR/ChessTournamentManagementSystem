            <TableColumn fx:id="gameNumberColumn" prefWidth="100" text="Numer Meczu" />
            <TableColumn fx:id="player1Column" prefWidth="150" text="Gracz 1" />
            <TableColumn fx:id="player2Column" prefWidth="150" text="Gracz 2" />
            <TableColumn fx:id="winnerColumn" prefWidth="150" text="ZwyciÄ™zca" />
            <TableColumn fx:id="actionsColumn" prefWidth="120" text="Akcje" />
